generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @unique @default(cuid())
  fname    String
  lname    String
  verified Boolean
  phone    Int     @unique
  email    String  @unique
  password String
  store    Store[]
  verificationCode VerificationCode[]
  @@index([id])
}

enum CodeTypes {
  RESET_PASSWORD 
  CONFIRM_EMAIL 
}

model VerificationCode {
   id       String  @unique @default(cuid())
   userId   String
   code     String  
   isActive Boolean
   type     CodeTypes 
   user     User?     @relation(fields: [userId], references: [id])
   @@index([id])
   @@index([userId])
}

model Store {
  id         String    @unique @default(cuid())
  userId     String
  location   String
  logo       String
  name       String
  categories String[]
  products   Product[]
  user       User?     @relation(fields: [userId], references: [id])

  @@index([id])
  @@index([userId])
}

model Product {
  id      String   @unique @default(cuid())
  storeId String
  type    String
  color   String[]
  store   Store?   @relation(fields: [storeId], references: [id])

  @@index([id])
  @@index([storeId])
}
