generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @unique @default(uuid())
  fname    String
  lname    String
  verified Boolean
  phone    Int     @unique
  email    String  @unique
  password String
  store    Store[]
  @@index([id])
}

model Store {
  id         String    @unique @default(uuid())
  userId     String
  location   String
  logo       String
  name       String
  categories String[]
  products   Product[]
  // we have to add a custom categories 
  user       User?     @relation(fields: [userId], references: [id])

  @@index([id])
  @@index([userId])
}

model Product {
  id      String   @unique @default(uuid())
  storeId String
  type    String
  color   String[]
  store   Store?   @relation(fields: [storeId], references: [id])

  @@index([id])
  @@index([storeId])
}
